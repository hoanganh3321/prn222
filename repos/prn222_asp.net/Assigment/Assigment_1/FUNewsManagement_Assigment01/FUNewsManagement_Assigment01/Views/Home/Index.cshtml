@model IEnumerable<FUNewsManagement_Assigment01.Models.Category>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <!-- Header Section -->
    <div class="header-section text-center mb-5 p-5">
        <h1 class="display-4 fw-bold text-gradient mb-3">FU News Management System</h1>
        <p class="lead fw-normal text-muted animated-text">Hệ thống quản lý và xuất bản tin tức hiệu quả cho cộng đồng giáo dục</p>
    </div>


    <!-- Search Section -->
    <div class="row mb-4">
        <div class="col-md-8 mx-auto">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Tìm kiếm tin tức...">
                <button class="btn btn-primary" type="button">Tìm kiếm</button>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="row mb-4">
        @foreach (var item in ViewBag.NewsArticles)
        {
            <div class="col-md-6 mb-4">
                <div class="card h-100 news-card shadow-sm">
                    <div class="card-body d-flex flex-column p-4">
                        <span class="category-badge">
                            <i class="fas fa-tag me-1"></i>
                            @item.Category.CategoryName
                        </span>
                        <h5 class="card-title mb-3">@item.NewsTitle</h5>
                        <p class="card-text flex-grow-1">@item.Headline</p>
                        <div class="mt-4">
                            <div class="time-info">
                                <i class="fas fa-calendar-plus"></i>
                                Created: @item.CreatedDate.ToString("dd/MM/yyyy HH:mm")
                            </div>
                            <div class="time-info mb-3">
                                <i class="fas fa-calendar-check"></i>
                                Updated: @item.ModifiedDate.ToString("dd/MM/yyyy HH:mm")
                            </div>
                            <a href="#" class="btn btn-outline-primary w-100 hover-btn mt-2">
                                <i class="fas fa-arrow-right me-2"></i>
                                Xem chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
