@model FUNewsManagement_Assigment01.Models.NewsArticle

@{
    ViewData["Title"] = "Edit News";
}

<hr />
<div class="container py-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Edit News Article</h4>
            <a asp-action="Index" class="btn btn-light">Back to List</a>
        </div>

        <div class="card-body">
            <form asp-action="View">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
                <input type="hidden" asp-for="NewsArticleId" />

                <div class="row">
                    <!-- Left Column -->
                    <div class="col-md-6">
                        <div class="mb-4">
                            <label asp-for="NewsTitle" class="form-label fw-bold">Title</label>
                            <input asp-for="NewsTitle" class="form-control" />
                            <span asp-validation-for="NewsTitle" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Headline" class="form-label fw-bold">Headline</label>
                            <input asp-for="Headline" class="form-control" />
                            <span asp-validation-for="Headline" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="NewsContent" class="form-label fw-bold">Content</label>
                            <textarea asp-for="NewsContent" class="form-control" rows="6"></textarea>
                            <span asp-validation-for="NewsContent" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Right Column -->
                    <div class="col-md-6">
                        <div class="mb-4">
                            <label asp-for="CategoryId" class="form-label fw-bold">Category</label>
                            <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId">
                                @foreach (var category in ViewBag.Category)
                                {
                                    <option value="@category.CategoryId">@category.CategoryName</option>
                                }
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="NewsSource" class="form-label fw-bold">Source</label>
                            <input asp-for="NewsSource" class="form-control" />
                            <span asp-validation-for="NewsSource" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="NewsStatus" class="form-label fw-bold">Status</label>
                            <select asp-for="NewsStatus" class="form-select">
                                <option value="">-- Select Status --</option>
                                <option value="Draft">Draft</option>
                                <option value="Published">Published</option>
                                <option value="Archived">Archived</option>
                            </select>
                            <span asp-validation-for="NewsStatus" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="CreatedById" class="form-label fw-bold">Author</label>
                            <select asp-for="CreatedById" class="form-select" asp-items="ViewBag.CreatedById">
                                <option value="">-- Select Author --</option>
                            </select>
                            <span asp-validation-for="CreatedById" class="text-danger"></span>
                        </div>

                        <!-- Hidden Fields -->
                        <input type="hidden" asp-for="CreatedDate" />
                        <input type="hidden" asp-for="UpdatedById" />
                        <input type="hidden" asp-for="ModifiedDate" value="@DateTime.Now" />
                    </div>
                </div>

                <div class="mt-4 text-end border-top pt-3">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-save me-2"></i>Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
