<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FUNewsManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FUNewsManagement_Assigment01.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">FUNewsManagement</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <div class="navBarLeft">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                            <li class="nav-item">
                                @await Component.InvokeAsync("Category")
                            </li>
                            @{
                                var allowedRoles = new[] { "Staff", "Admin" };
                            }
                            @if (User.Identity.IsAuthenticated && allowedRoles.Any(role => User.IsInRole(role)))
                            {
                                <li class="nav-item">
                                    @await Component.InvokeAsync("StaffAction")
                                </li>
                            }
                            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    @await Component.InvokeAsync("AdminAction")
                                </li>
                            }
                        </ul>
                    </div>
                    <div class="navBarRight">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <div class="user-dropdown">
                                        <div class="user-info">
                                            <span>Xin chào @User.Identity.Name!</span>
                                        </div>
                                        <div class="dropdown-content">
                                            <a href="#" class="logout-btn">Thông tin cá nhân</a>
                                            <a href="/Authentication/Logout" class="logout-btn">Đăng xuất</a>
                                        </div>
                                    </div>

                                }
                                else
                                {
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Authentication" asp-action="Login">Login</a>
                                }
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer bg-light py-5 border-top mt-auto">
        <div class="container">
            <div class="row gy-4">
                <!-- Newsletter Section -->
                <div class="col-lg-6">
                    <h5 class="mb-3 text-dark">Đăng ký nhận tin</h5>
                    <p class="text-muted mb-3">Nhận thông báo về tin tức mới nhất từ FU News</p>
                    <form class="newsletter-form">
                        <div class="input-group">
                            <input type="email" class="form-control" placeholder="Email của bạn" required>
                            <button class="btn btn-primary" type="submit">
                                <i class="fas fa-paper-plane me-1"></i> Đăng ký
                            </button>
                        </div>
                    </form>
                </div>

                <!-- Contact Info -->
                <div class="col-lg-6">
                    <h5 class="mb-3 text-dark">Thông tin liên hệ</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2 text-muted">
                            <i class="fas fa-map-marker-alt me-2"></i> FPT University, Hòa Lạc, Hà Nội
                        </li>
                        <li class="mb-2 text-muted">
                            <i class="fas fa-phone me-2"></i> (024) 7300 1866
                        </li>
                        <li class="mb-2 text-muted">
                            <i class="fas fa-envelope me-2"></i> news@fpt.edu.vn
                        </li>
                    </ul>
                    <div class="mt-3">
                        <a href="#" class="text-muted me-3"><i class="fab fa-facebook fa-lg"></i></a>
                        <a href="#" class="text-muted me-3"><i class="fab fa-twitter fa-lg"></i></a>
                        <a href="#" class="text-muted me-3"><i class="fab fa-linkedin fa-lg"></i></a>
                        <a href="#" class="text-muted"><i class="fab fa-youtube fa-lg"></i></a>
                    </div>
                </div>
            </div>

            <hr class="my-4">

            <!-- Copyright -->
            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start text-muted">
                    &copy; @DateTime.Now.Year - FU News Management System
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <small class="text-muted">Developed with <i class="fas fa-heart text-danger"></i> by FPT University</small>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
