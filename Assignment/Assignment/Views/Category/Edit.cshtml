@model Assignment.ViewModel.CategoryViewModel

@{
	ViewData["Title"] = "Chỉnh sửa Category";
}

<h2>Chỉnh sửa Category</h2>

<div class="card">
	<div class="card-header">
		<h4>Cập nhật Category</h4>
	</div>
	<div class="card-body">
		<form asp-action="Edit" method="post">
			<input type="hidden" asp-for="CategoryId" />

			<div class="mb-3">
				<label class="form-label">Tên Category</label>
				<input asp-for="CategoryName" class="form-control" required />
			</div>

			<div class="mb-3">
				<label class="form-label">Mô tả</label>
				<input asp-for="CategoryDesciption" class="form-control" />
			</div>

			<div class="mb-3">
				<input type="checkbox" name="IsActive" value="true" @(Model.IsActive == true ? "checked" : "") />
				<input type="hidden" name="IsActive" value="false" />
				<label for="IsActive"></label>
				<label asp-for="IsActive">Hoạt động</label>
			</div>

			<button type="submit" class="btn btn-primary">Cập nhật</button>
			<a asp-action="Index" class="btn btn-secondary">Hủy</a>
		</form>
	</div>
</div>
