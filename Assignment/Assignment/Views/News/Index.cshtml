<h2>Danh sách tin tức</h2>

<!-- Nút Tạo bài viết mới -->
<a asp-action="Create" class="btn btn-primary mb-3">Tạo bài viết mới</a>

<table class="table">
    <thead>
        <tr>
            <th>Tiêu đề</th>
            <th>Chuyên mục</th>
            <th>Ngày tạo</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.NewsTitle</td>
                <td>@item.CategoryName</td>
                <td>@item.CreatedDate?.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.NewsArticleId">Xem</a> |
                    <a asp-action="Edit" asp-route-id="@item.NewsArticleId">Sửa</a> |
                    <a asp-action="Delete" asp-route-id="@item.NewsArticleId" onclick="return confirm('Xóa bài viết này?')">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
