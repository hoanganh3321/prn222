@model Assignment.ViewModel.NewsArticleViewModel

@{
    ViewData["Title"] = "Chỉnh sửa tin tức";
}

<h2>Chỉnh sửa bài viết</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="NewsArticleId" />

    <div class="form-group">
        <label asp-for="NewsTitle" class="control-label">Tiêu đề</label>
        <input asp-for="NewsTitle" class="form-control" />
        <span asp-validation-for="NewsTitle" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Headline" class="control-label">Tiêu đề phụ</label>
        <input asp-for="Headline" class="form-control" />
        <span asp-validation-for="Headline" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NewsContent" class="control-label">Nội dung</label>
        <textarea asp-for="NewsContent" class="form-control" rows="5"></textarea>
        <span asp-validation-for="NewsContent" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NewsStatus" class="control-label">Trạng thái</label>
        <select asp-for="NewsStatus" class="form-control">
            <option value="true">Hoạt động</option>
            <option value="false">Ẩn</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="CategoryId" class="control-label">Chuyên mục</label>
        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
            <option value="">Chọn chuyên mục</option>
        </select>
    </div>


    <div class="form-group">
        <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
